<%= link_to 'Home', root_path %>

<h1>Listing roles</h1>

<table>
  <tr>
    <th>Working days</th>
    <th>Name</th>
    <th>Leaves applicable</th>
    <th>Actions</th>

  </tr>

<% @roles.each do |role| %>
  <tr>
    <td><%= role.working_days %></td>
    <td><%= role.name %></td>
    <td><%= role.leaves_applicable %></td>
    <td><%= link_to 'Show', role,:class=>"actions" %>
    <%= link_to 'Edit', edit_role_path(role),:class=>"actions" %>
    <%= link_to 'Destroy', role, confirm: 'Are you sure?', method: :delete ,:class=>"actions"%></td>
  </tr>
<% end %>
</table>

