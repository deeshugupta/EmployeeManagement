<table>
  <tr>
    <th>
      Name
    </th>
    <th>
      From Date
    </th>
    <th>
      To Date
    </th>
    <th>
      Category
    </th>
    <th>
      Leave Type
    </th>
    <th>
      Days
    </th>
    <th>
      Reason
    </th>
    <th>
      Status
    </th>
    <th>
      Actions
    </th>
  </tr>
  <% attendances.each do |approval|%>
      <tr>
        <td>
          <%= approval.user.name %>
        </td>
        <td>
          <%= date_format(approval.start_date) %>
        </td>
        <td>
          <%= date_format(approval.end_date) %>
        </td>
        <td>
          <%= approval.is_leave_or_wfh ? 'Leave' : 'Work From Home' %>
        </td>
        <td>
          <%= approval.leave_type.name %>
        </td>
        <td>
          <%= approval.days %>
        </td>
        <td>
          <%= approval.reason %>
        </td>
        <td>
          <%= attendance_current_status(approval) %>
        </td>
        <td id="approval<%= approval.id%>">
          <%= link_to("show",{:controller => 'attendances', :action => 'show', :id => approval.id},:class=>"actions")%>

          <%= form_tag approve_dashboard_index_path , :html=>{:class => "approval_comments"} do %>
              <div class="field">
                <%= label_tag :comments %><br />
                <%= text_area_tag :comments, "", :cols=>10, :rows=>5 %>
              </div>
              <%= hidden_field_tag("approval_id",approval.id) %>

              <%= submit_tag "Approve" %>
              <%= submit_tag "Reject" %>
              <%= submit_tag "Comment" %>
          <% end %>

        </td>
      </tr>
  <% end %>

</table>

<script>
    $(document).ready(function() {
        click_approval();
    })
</script>