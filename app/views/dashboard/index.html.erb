<div id="see_requests" class="content_section" style="display: none;">
  <% if current_user.roles.include?(Role.find_by_name(:manager)) %>
  <table>
    <tr>
      <td>
        Name
      </td>
      <td>
        Date
      </td>
      <td>
        Days
      </td>
      <td>
        Status
      </td>
    </tr>
    <% current_user.approvals.each do |approval|%>
    <tr>
      <td>
        <%= approval.user.name %>
      </td>
      <td>
        <%= approval.start_date %>
      </td>
      <td>
        <%= approval.days %>
      </td>
      <td>
        <%= current_status(approval) %>
      </td>
    </tr>
    <% end %>

  </table>
  <% end %>

</div>

